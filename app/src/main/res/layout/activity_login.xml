<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/login_bg"
        android:id="@+id/id_login_root"
        tools:context="wgz.com.antbaojie.LoginActivity">
    <wgz.com.antbaojie.view.CircleImageView
            android:layout_width="70dp" android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ayifacce"
            android:layout_marginTop="20dp"
            android:id="@+id/id_login_face"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="大妈1号"
              android:textColor="@color/black"
              android:layout_centerHorizontal="true"
              android:layout_below="@id/id_login_face"
              android:layout_marginTop="14dp"
              android:id="@+id/id_login_name"
    />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
                  android:layout_below="@id/id_login_name"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="40dip"
                      android:orientation="horizontal"
                      android:layout_marginLeft="20dip"
                      android:layout_marginRight="20dip"
                      android:layout_marginTop="30dip"
                      android:gravity="center_vertical"
                      android:background="@drawable/bordergray_table_topradius_ontrans"

        >

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@null"
                    android:ems="10"
                    android:id="@+id/id_login_username"
                    android:hint="手机号码"



                    android:singleLine="true" >

                <requestFocus />
            </EditText>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="40dip"
                      android:orientation="horizontal"
                      android:layout_marginLeft="20dip"
                      android:layout_marginRight="20dip"
                      android:gravity="center_vertical"
                      android:background="@drawable/bordergray_tablen_bottomradius_ontrans"

        >

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@null"
                    android:password="true"
                    android:ems="10"
                    android:hint="密码"

                    android:id="@+id/id_login_userpass"
                    android:singleLine="true" >

                <requestFocus />
            </EditText>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="40dip"
                      android:orientation="horizontal"
                      android:layout_marginLeft="20dip"
                      android:layout_marginRight="20dip"
                      android:layout_marginTop="30dp"
                      android:gravity="center"
                      android:id="@+id/loginBtn"
                      android:background="@drawable/btn_red5_selector"

        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登 录"


                    android:textColor="@color/white"
                    android:textSize="18sp"
            />
        </LinearLayout>
    </LinearLayout>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
android:text="忘记密码"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          android:textColor="@color/white"
          android:id="@+id/id_login_forgetPass"
          android:layout_marginBottom="5dp"
/>
</RelativeLayout>
